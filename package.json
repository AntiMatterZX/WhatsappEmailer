{
  "name": "whatsapp-bot",
  "version": "1.0.0",
  "description": "A WhatsApp bot for monitoring group chats and automating workflows",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "start:verbose": "set LOG_LEVEL=verbose&& node src/index.js",
    "start:debug": "set LOG_LEVEL=debug&& node src/index.js",
    "start:info": "set LOG_LEVEL=info&& node src/index.js",
    "start:warn": "set LOG_LEVEL=warn&& node src/index.js",
    "start:error": "set LOG_LEVEL=error&& node src/index.js",
    "start:quiet": "set LOG_LEVEL=error&& set NODE_ENV=production&& node src/index.js",
    "env": "node scripts/env-editor.js",
    "env:setup": "node scripts/setup-env.js",
    "whatsapp:connect": "node src/scripts/whatsapp-connection.js connect",
    "whatsapp:disconnect": "node src/scripts/whatsapp-connection.js disconnect",
    "whatsapp:status": "node src/scripts/whatsapp-connection.js status"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.12.0",
    "bullmq": "^4.18.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.0.1",
    "ioredis": "^5.3.2",
    "mongoose": "^8.15.0",
    "nodemailer": "^6.10.1",
    "prom-client": "^15.0.0",
    "qrcode-svg": "^1.1.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "whatsapp-web.js": "^1.28.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
