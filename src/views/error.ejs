<%- contentFor('body') %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card">
      <div class="card-body text-center p-5">
        <h1 class="display-1 text-danger mb-4">
          <i class="bi bi-exclamation-triangle-fill"></i>
        </h1>
        <h2 class="mb-4"><%= error.status || 500 %> - <%= error.message || 'Something went wrong' %></h2>
        <p class="text-muted mb-4">
          <%= error.description || 'An unexpected error has occurred. Please try again or contact the administrator if the problem persists.' %>
        </p>
        <div class="d-grid gap-2 d-md-block">
          <a href="javascript:history.back()" class="btn btn-outline-secondary me-md-2">
            <i class="bi bi-arrow-left me-2"></i>Go Back
          </a>
          <a href="/" class="btn btn-primary">
            <i class="bi bi-house-door me-2"></i>Go Home
          </a>
        </div>
      </div>
    </div>
  </div>
</div> 